{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "types": ["jest", "node"],
    "target": "ES6",
    "module": "ES6",
    "outDir": "build",
    "moduleResolution": "Node",
    "removeComments": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "files": [
    "./tsmaz.ts",
    "./generate_codebook.ts"
  ]
}
